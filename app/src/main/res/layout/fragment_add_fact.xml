<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.dashboard.FactDetailsFragment$AddFactFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/primary_color"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/title_text_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:inputType="textPersonName"
            android:text="Your Journey title" />

        <TextView
            android:layout_width="match_parent"
            android:text="Upload photo"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/primary_color"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/add_upload_img"
            android:src="@drawable/ic_baseline_add_circle_24"
            android:background="@color/primary_light"

            android:layout_height="200dp"
            android:layout_marginBottom="20dp"/>


        <TextView
            android:layout_width="match_parent"
            android:text="Description"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/primary_color"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/description_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="5"
            android:inputType="textPersonName"
            android:text="Your Journey Description" />


        <Button
            android:layout_width="match_parent"
            android:id="@+id/add_btn_submit"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:background="@drawable/btn_2_design"
            android:text="Submit"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"/>






    </LinearLayout>

</FrameLayout>